{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/py/(.*)",
      "dest": "/api/hello/index.py"
    }
  ],
  "outputDirectory": ".next"
} 