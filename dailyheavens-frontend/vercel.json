{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    { "source": "/api/hello", "destination": "/api/hello" },
    { "source": "/api/birth-chart", "destination": "/api/birth-chart" },
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "public": true
} 